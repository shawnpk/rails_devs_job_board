<div class="p-10 mb-24 bg-white border rounded">
  <%= form_with(model: job, local: true) do |form| %>
    <% if job.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>

        <ul>
          <% job.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="flex items-center flex-wrap justify-between input-group">
      <div>
        <%= form.label :company_logo, class: 'label' %>
        <%= form.file_field :company_logo %>
      </div>
      <% if form.object.company_logo.attached? %>
        <%= image_tag form.object.company_logo, class: 'w-auto h-24' %>
      <% end %>
    </div>

    <div class="input-group">
      <%= form.label :title, class: 'label' %>
      <%= form.text_field :title, class: 'input' %>
    </div>

    <div class="grid grid-cols-1 gap-6 lg:grid-cols-2 input-group">
      <div class="lg:col-span-1">
        <%= form.label :link_to_apply, class: 'label' %>
        <%= form.text_field :link_to_apply, class: 'input' %>
      </div>

      <div class="lg:col-span-1">
        <%= form.label :headquarters, class: 'label' %>
        <%= form.text_field :headquarters, class: 'input' %>
      </div>
    </div>

    <div class="input-group">
      <%= form.label :description, class: 'label' %>
      <%= form.rich_text_area :description %>
    </div>

    <div class="grid grid-cols-1 gap-6 lg:grid-cols-2 input-group">
      <div class="lg:col-span-1">
        <%= form.label :company_name, class: 'label' %>
        <%= form.text_field :company_name, class: 'input' %>
      </div>

      <div class="lg:col-span-1">
        <%= form.label :company_website, class: 'label' %>
        <%= form.text_field :company_website, class: 'input' %>
      </div>
    </div>

    <div class="input-group">
      <%= form.label :company_description, class: 'label' %>
      <%= form.rich_text_area :company_description %>
    </div>

    <div class="flex lg:flex-no-wrap flex-wrap items-center justify-start input-group">
      <div class="w-full lg:pr-4 lg:w-1/3 lg:mb-0 mb-6">
        <%= form.label :compensation_type, class: 'label' %>
        <div class="relative">
          <%= form.select :compensation_type, options_for_select(Job::COMPENSATION_TYPES), { prompt: 'Select One' }, { class: 'select' } %>
          <%= select_arrow %>
        </div>
      </div>

      <div class="lg:px-2 lg:w-auto w-full mb-6 lg:mb-0">
        <%= form.label :compensation_range, class: 'label' %>
        <%= form.text_field :compensation_range, class: 'input' %>
      </div>

      <div class="lg:pl-4 lg:w-auto w-full">
        <%= form.label :estimated_hours, class: 'label' %>
        <%= form.text_field :estimated_hours, class: 'input' %>
      </div>
    </div>

    <div class="lg:pr-4 lg:w-1/3 input-group">
      <%= form.label :years_of_experience, class: 'label' %>
      <%= form.text_field :years_of_experience, class: 'input' %>
    </div>

    <div class="lg:w-1/2 input-group input-checkbox">
      <%= form.check_box :remote, class: 'input' %>
      <%= form.label :remote, 'Is this a remote only role?', class: 'label' %>
    </div>

    <div class="input-group">
      <%= form.submit class: 'btn btn-green' %>
    </div>
  <% end %>
</div>
